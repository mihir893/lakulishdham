<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="16dp"
    android:paddingBottom="16dp">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtMemberName"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_semibold"
        android:gravity="left"
        android:text="Error"
        android:textColor="@color/grey3"
        android:textSize="17sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/txtMemberEdit"
       />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtMemberRelation"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="left"
        android:text="Error"
        android:textColor="@color/grey6"
        android:textSize="15sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/txtMemberName"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtMemberEdit"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:gravity="left"
        android:text="Edit"
        android:textColor="@color/white"
        android:textSize="12sp"
        android:background="@drawable/round_button"
        android:paddingStart="8dp"
        android:paddingEnd="8dp"
        android:paddingTop="3dp"
        android:paddingBottom="3dp"
        app:layout_constraintTop_toTopOf="@id/txtMemberName"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginEnd="8dp"
        />


</androidx.constraintlayout.widget.ConstraintLayout>