<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".activities.ContactSupportActivity">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/imgBack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="24dp"
        android:onClick="goBack"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_baseline_keyboard_backspace_24" />

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/header"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:fontFamily="@font/montserrat_bold"
        android:gravity="left"
        android:text="Contact us"
        android:textColor="@color/grey1"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@id/imgBack"
        app:layout_constraintTop_toBottomOf="@id/imgBack" />

    <androidx.cardview.widget.CardView
        android:id="@+id/cvImage"
        android:layout_width="0dp"
        android:layout_height="250dp"
        android:layout_gravity="center"
        android:layout_marginTop="24dp"
        android:orientation="vertical"
        app:cardBackgroundColor="@color/white"
        app:cardCornerRadius="12dp"
        app:layout_constraintTop_toBottomOf="@id/header"
        app:layout_constraintStart_toStartOf="@id/header"
        app:layout_constraintEnd_toEndOf="@id/header">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="250dp"
            android:scaleType="centerCrop"
            android:src="@drawable/hg_support_image" />

    </androidx.cardview.widget.CardView>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtCall"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="48dp"
        android:fontFamily="@font/montserrat_medium"
        android:letterSpacing="0.1"
        android:lineSpacingExtra="5dp"
        android:text="@string/support_call"
        android:textColor="@color/grey3"
        android:textSize="16sp"
        android:drawableStart="@drawable/ic_baseline_call_48"
        app:drawableTint="@color/orange"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="@id/header"
        app:layout_constraintStart_toStartOf="@id/header"
        app:layout_constraintTop_toBottomOf="@id/cvImage"
        android:onClick="clickOnCall"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:letterSpacing="0.1"
        android:lineSpacingExtra="5dp"
        android:layout_marginTop="48dp"
        android:text="@string/support_email"
        android:textColor="@color/grey3"
        android:textSize="16sp"
        android:drawableStart="@drawable/ic_baseline_email_48"
        app:drawableTint="@color/orange"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="@id/header"
        app:layout_constraintStart_toStartOf="@id/header"
        app:layout_constraintTop_toBottomOf="@id/txtCall"
        android:onClick="clickOnEmail"/>

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/txtWeb"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_medium"
        android:letterSpacing="0.1"
        android:lineSpacingExtra="5dp"
        android:layout_marginTop="48dp"
        android:text="@string/support_web"
        android:textColor="@color/grey3"
        android:textSize="16sp"
        android:drawableStart="@drawable/ic_baseline_language_48"
        app:drawableTint="@color/orange"
        android:drawablePadding="16dp"
        android:gravity="center_vertical"
        app:layout_constraintEnd_toEndOf="@id/header"
        app:layout_constraintStart_toStartOf="@id/header"
        app:layout_constraintTop_toBottomOf="@id/txtEmail"
        android:onClick="clickOnWeb"/>


</androidx.constraintlayout.widget.ConstraintLayout>